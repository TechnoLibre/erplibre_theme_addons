<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="mail_notification_paynow_custom"
                  name="Mail: Pay Now mail notification template - custom"
                  inherit_id="mail.mail_notification_paynow">

            <xpath expr="//tbody" position="before">
                <t t-set="brand_color" t-value="record.get_theme_color_brand()"/>
                <t t-set="primary_color" t-value="record.get_theme_color_primary()"/>
            </xpath>

            <xpath expr="//tbody/tr[2]/td/div[1]/a" position="inside">
                <span><t t-esc="primary_color"></t></span>
            </xpath>
            <xpath expr="//tbody/tr[2]/td/div[1]/a" position="attributes">
            <!-- original: style="background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;" -->
                <attribute name="style">background-color: #875A7B; padding: 8px 16px 8px 16px; text-decoration: none; color: #fff; border-radius: 5px; font-size:13px;</attribute>
            </xpath>

        </template>

    </data>
</odoo>
